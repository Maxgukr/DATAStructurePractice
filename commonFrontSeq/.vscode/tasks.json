{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "./commonFrontSeq/main.cpp",
                "./commonFrontSeq/include.h",
                "./commonFrontSeq/practice.cpp",
                "./commonFrontSeq/practice2.cpp",
                "-o",
                "./commonFrontSeq/main.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "include.h",
                "practice.cpp",
                "practice2.cpp",
                "-o",
                "debug.exe"
            ]
        }
    ]
}